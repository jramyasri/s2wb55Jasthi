extends layout

block content
  h1= title
  - let organizations = [{name:"Apollo", type:"Hospital", noofbranches: 50},{name:"saint luke", type:"private", noofbranches: 100},{name:"usaa", type:"public", noofbranches: 100}]
  div(class="container-fluid") 
   div(class="row")
    each organization,index in organizations 
        div(class="col-sm-2" onclick=`buy(${index+1})`) name: #{organization.name} , type: #{organization.type} , noofbranches: #{organization.noofbranches}
          
    script. 
     function buy(index)
     {
        alert(`You purchased Item ${index}`);
     }